// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../sqlite.db"
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String
  passwordHash String
  role         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model MenuItem {
  id          String             @id @default(uuid())
  title       String
  img         String
  description String
  price       Float
  type        String
  orders      MenuItemsInOrder[]
}

model Order {
  id        Int                @id @default(autoincrement())
  table     String
  customer  String
  status    String             @default("pending")
  items     MenuItemsInOrder[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model MenuItemsInOrder {
  count      Int
  order      Order    @relation(fields: [orderId], references: [id])
  orderId    Int // relation scalar field (used in the `@relation` attribute above)
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  menuItemId String // relation scalar field (used in the `@relation` attribute above)

  @@id([orderId, menuItemId])
}
